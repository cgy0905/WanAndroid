<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cgy.wandroid">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 联网权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- SD 卡读权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- SD 卡写权限 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name="com.jess.arms.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.todo.AddTodoActivity"></activity>
        <activity android:name=".ui.setting.OpenProjectActivity" />
        <activity android:name=".ui.integral.IntegralHistoryActivity" />
        <activity android:name=".ui.setting.SettingActivity" />
        <activity android:name=".ui.integral.IntegralActivity" />
        <activity android:name=".ui.todo.TodoActivity" />
        <activity android:name=".ui.todo.todoActivity" />
        <activity android:name=".ui.collect.CollectActivity" />
        <activity android:name=".ui.main.tree.treeinfo.TreeInfoActivity" />
        <activity android:name=".ui.web.WebViewActivity" />
        <activity android:name=".ui.main.home.search.SearchActivity" />
        <activity android:name=".ui.main.home.search.SearchResultActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:label="主页"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="登录"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.error.ErrorActivity" />
        <activity android:name=".ui.login.RegisterActivity" /> <!-- Arms 配置 -->
        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="667" />
        <meta-data
            android:name="com.cgy.wandroid.app.GlobalConfiguration"
            android:value="ConfigModule" />
    </application>

</manifest>